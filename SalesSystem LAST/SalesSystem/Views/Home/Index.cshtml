@model Usuario
@{
    ViewData["Title"] = "Home Page";
}

<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Iniciar sesion</h3>
                </div>
                <img src="~/images/Login.jpg" class="mx-auto w-25">
                <div class="card-body">
                    <form action="@Url.Action("Index","Home")" method="POST">
                        <div class="form-group">
                            <input placeholder="Usuario" class="form-control" autofocus name="NombreUsuario" />
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input placeholder="Contraseña" class="form-control" type="password" name="Contraseña" />
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <span class="text-danger">
                                @Html.DisplayFor(m => m.ErrorMessage)
                            </span>
                        </div>
                        <button class="btn btn-primary btn-block" type="submit">
                            Ingresar
                        </button>
        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>